@model AlsoftShop.ViewModels.ShopViewModel

<div class="row">
    <div class="col-10 ">
        thats items list
        <form>
            <ul>
                @foreach (var item in Model.Items)
                {
                    <li>
                        @item.Name @item.Price
                        <button class="btn btn-primary" asp-controller="Shop" asp-action="Add" asp-route-id="@item.Id">Add</button>
                    </li>
                }

            </ul>
        </form>
    </div>
    <div class="col-2">
        thats shopping cart
        <form class="row">
            <ul>
                @foreach (var item in Model.CurrentItems)
                {
                    <li>
                        @item.Item.Name @item.Quantity
                        <button class="btn btn-primary" asp-controller="Shop" asp-action="Remove" asp-route-id="@item.Id">Remove</button>
                    </li>
                }
            </ul>
            <div class="row">
                <h2>Total: @Model.TotalPrice $</h2>
            </div>
        </form>
    </div>
</div>